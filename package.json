{
  "name": "pastepad",
  "displayName": "pastepad",
  "description": "Access and manage your omg.lol pastebin from VS Code.",
  "version": "0.0.1",
  "publisher": "semanticdata",
  "repository": "https://github.com/microsoft/vscode-extension-samples/helloworld-sample",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onView:pastepad.pastebin"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pastepad.authenticate",
        "title": "Authenticate with omg.lol",
        "icon": "$(key)"
      },
      {
        "command": "pastepad.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "pastepad.logout",
        "title": "Logout",
        "icon": "$(sign-out)"
      },
      {
        "command": "pastepad.openPaste",
        "title": "Open Paste",
        "icon": "$(file-text)"
      }
    ],
    "views": {
      "pastepad": [
        {
          "id": "pastepad.pastebin",
          "name": "Pastebin",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pastepad",
          "title": "Pastepad",
          "icon": "$(file-text)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "pastepad.authenticate",
          "when": "view == pastepad.pastebin && !pastepad.authenticated",
          "group": "navigation"
        },
        {
          "command": "pastepad.refresh",
          "when": "view == pastepad.pastebin && pastepad.authenticated",
          "group": "navigation"
        },
        {
          "command": "pastepad.logout",
          "when": "view == pastepad.pastebin && pastepad.authenticated",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
{
  "name": "pastepad",
  "displayName": "PastePad",
  "description": "Access and manage your omg.lol pastebin from VS Code.",
  "version": "0.2.0",
  "publisher": "semanticdata",
  "repository": "https://github.com/semanticdata/pastepad",
  "engines": {
    "vscode": "^1.107.1"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onView:pastepad.pastebin",
    "onUri"
  ],
  "main": "./dist/extension.js",
  "bugs": {
    "url": "https://github.com/semanticdata/pastepad/issues"
  },
  "homepage": "https://github.com/semanticdata/pastepad#readme",
  "keywords": [
    "pastebin",
    "omg.lol",
    "snippet",
    "code sharing",
    "paste",
    "clipboard"
  ],
  "contributes": {
    "commands": [
      {
        "command": "pastepad.authenticate",
        "title": "Authenticate with omg.lol",
        "icon": "$(key)"
      },
      {
        "command": "pastepad.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "pastepad.logout",
        "title": "Logout",
        "icon": "$(sign-out)"
      },
      {
        "command": "pastepad.openPaste",
        "title": "Open Paste",
        "icon": "$(file-text)"
      },
      {
        "command": "pastepad.newPaste",
        "title": "New Paste",
        "icon": "$(add)"
      },
      {
        "command": "pastepad.savePaste",
        "title": "Save Paste",
        "icon": "$(save)"
      },
      {
        "command": "pastepad.deletePaste",
        "title": "Delete Paste",
        "icon": "$(trash)"
      },
      {
        "command": "pastepad.forceSync",
        "title": "Force Sync Changes",
        "icon": "$(sync)"
      },
      {
        "command": "pastepad.toggleVisibility",
        "title": "Toggle Visibility",
        "icon": "$(eye)"
      },
      {
        "command": "pastepad.togglePasteGrouping",
        "title": "Toggle Paste Grouping by Visibility"
      },
      {
        "command": "pastepad.toggleDefaultListing",
        "title": "Toggle Default Listing for New Pastes"
      },
      {
        "command": "pastepad.showPasteStats",
        "title": "Show Paste Statistics"
      }
    ],
    "views": {
      "pastepad": [
        {
          "id": "pastepad.pastebin",
          "name": "Pastebin",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pastepad",
          "title": "PastePad",
          "icon": "$(file-text)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "pastepad.authenticate",
          "when": "view == pastepad.pastebin && !pastepad.authenticated",
          "group": "navigation"
        },
        {
          "command": "pastepad.refresh",
          "when": "view == pastepad.pastebin && pastepad.authenticated",
          "group": "navigation"
        },
        {
          "command": "pastepad.logout",
          "when": "view == pastepad.pastebin && pastepad.authenticated",
          "group": "navigation"
        },
        {
          "command": "pastepad.newPaste",
          "when": "view == pastepad.pastebin && pastepad.authenticated",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pastepad.openPaste",
          "when": "view == pastepad.pastebin && viewItem == paste",
          "group": "inline@1"
        },
        {
          "command": "pastepad.toggleVisibility",
          "when": "view == pastepad.pastebin && viewItem == paste",
          "group": "inline@2"
        },
        {
          "command": "pastepad.deletePaste",
          "when": "view == pastepad.pastebin && viewItem == paste",
          "group": "inline@3"
        }
      ],
      "editor/title": [
        {
          "command": "pastepad.savePaste",
          "when": "pastepad.isPasteDocument && pastepad.authenticated",
          "group": "navigation@1"
        },
        {
          "command": "pastepad.forceSync",
          "when": "pastepad.isPasteDocument && pastepad.authenticated && pastepad.hasUnsyncedChanges",
          "group": "navigation@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "pastepad.savePaste",
        "key": "ctrl+s",
        "when": "pastepad.isPasteDocument && pastepad.authenticated"
      },
      {
        "command": "pastepad.forceSync",
        "key": "ctrl+shift+s",
        "when": "pastepad.isPasteDocument && pastepad.authenticated && pastepad.hasUnsyncedChanges"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.7.2",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}